<main>
    {{#if hasGames}}
    <div class="grid">
        {{#each games}}
        <article class="card">
            <div class="card__content">
                <img src="{{this.imageUrl}}">
                <h3>{{this.title}}</h3>
            </div>
            <div class="card__content__actions">
                <a class="btn" href="/games/{{this.id}}" class="button">Details</a>
            </div>
        </article>
        {{/each}}
    </div>
    <div class="pagination_container">
        <a class="pagination" href="/?page=1">1</a>
        <a class="pagination" href="/?page={{nextPage}}">{{nextPage}}</a>
    </div>

    {{ else}}
    <h2>No games found.</h2>
    {{/if}}
</main>